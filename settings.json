{
  "icon_theme": "Colored Zed Icons Theme Dark",
  "disable_ai": true,
  "show_edit_predictions": false,
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {},
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "enable_language_server": true,
  "file_scan_exclusions": ["**/build"],
  "format_on_save": "on",
  "lsp": {
    "clang": {
      "binary": {
        "arguments": [
          "--clang-tidy",
          "--completion-style=detailed",
          "--header-insertion=iwyu",
          "--completion-style=detailed",
          "--function-arg-placeholders=false"
        ]
      }
    }
  },
  "debugger": {
    "save_breakpoints": false,
    "dock": "left",
    "timeout": 10000,
    "save_breakpoints": false
  },
   "show_signature_help_after_edits": false,
}
